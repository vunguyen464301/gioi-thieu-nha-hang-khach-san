<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10px"
    tools:context=".Chitiet_Fragment_Homepage.Chitiet_Fragment_Homepage_4"
    android:background="@drawable/homepage_3">
    <ScrollView
        android:layout_above="@id/btnBackChitietFragment4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/img_chitiet_fragment_4"
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:src="@drawable/no_image"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã món ăn: "/>

                <TextView
                    android:id="@+id/txt1_chitiet_fragment_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên món ăn: "/>

                <TextView
                    android:id="@+id/txt2_chitiet_fragment_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn giá: "/>

                <TextView
                    android:id="@+id/txt3_chitiet_fragment_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="giá"/>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
    <Button
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/btnBackChitietFragment4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_back"
        android:background="@drawable/homepage_8"
        android:textColor="@color/colorSelectedTab"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

</RelativeLayout>