<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_item_gridview_admin"
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@drawable/ic_message_black_24dp" />
        <TextView
            android:id="@+id/txt1_item_gridview_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_item_gridview_admin"
            android:text="0"
            android:textColor="#000"/>
    <TextView
        android:id="@+id/txt2_item_gridview_admin"
        android:layout_marginTop="80px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:layout_marginLeft="40px"
        android:textColor="#000"
        android:textStyle="bold"
        android:background="@drawable/homepage_15"
        android:paddingRight="10px"
        android:paddingLeft="10px"/>

</RelativeLayout>