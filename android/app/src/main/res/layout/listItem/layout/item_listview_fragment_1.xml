<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="5px"
    android:paddingRight="10px"
    android:paddingLeft="10px"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/homepage_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10px"
            android:paddingLeft="10px"
            android:paddingBottom="10px">
            <ImageView
                android:id="@+id/img_listview_fragment_1"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/no_image"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10px"
            android:paddingLeft="5px"
            android:paddingRight="10px"
            android:paddingBottom="10px">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã loại phòng"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/txtMaloaiphong_fragment_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Mã"
                  />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên phòng"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txtTenphong_fragment_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txtSoluong_fragment_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>