<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="5px"
    android:paddingRight="10px"
    android:paddingLeft="10px">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/homepage_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10px"
            android:paddingLeft="10px"
            android:paddingBottom="10px">
            <ImageView
                android:id="@+id/img_listview_fragment_1_chitiet"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@drawable/no_image"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10px"
            android:paddingLeft="5px"
            android:paddingRight="10px"
            android:paddingBottom="10px">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã phòng"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/txtMaphong_fragment_1_chitiet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="..."
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txtMota_fragment_1_chitiet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã loại phòng"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txtMaloaiphong_fragment_1_chitiet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn giá 1 giờ"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txtDongia1gio_fragment_1_chitiet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn giá ngày"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txtDongiangay_fragment_1_chitiet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn giá đêm"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txtDongiadem_fragment_1_chitiet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đơn giá ngày đêm"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txtDongiangaydem_fragment_1_chitiet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiện nghi"
                    android:layout_weight="1"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginLeft="110px"
                    android:id="@+id/txtTiennghi_fragment_1_chitiet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tình trạng"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txtTinhtrang_fragment_1_chitiet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."/>

            </LinearLayout>
        </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20px"
            >
            <Button
                android:id="@+id/btnTuychon_fragment_1_chitiet"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:text="Tùy chọn"
                android:layout_alignParentRight="true"
                android:background="@drawable/homepage_8"/>
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>