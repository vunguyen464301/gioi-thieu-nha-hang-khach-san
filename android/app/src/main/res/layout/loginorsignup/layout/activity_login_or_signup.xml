<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/homepage_3"
    tools:context=".LoginAndSignup.LoginOrSignupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_main_nhacnho"
        android:layout_marginBottom="10px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vui lòng đăng nhập"
            android:paddingRight="20px"
            android:paddingLeft="20px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:background="@drawable/main_logo_kinhchaoquykhach"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/txt_main_logokinhchaoquykhach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            android:paddingRight="20px"
            android:paddingLeft="20px"
            android:paddingTop="20px"
            android:paddingBottom="20px"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:background="@drawable/main_logo_kinhchaoquykhach"
            android:layout_centerHorizontal="true"
            />




    </RelativeLayout>


    <TextView
        android:id="@+id/txt_main_nhacnho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/warning"
        android:layout_above="@id/linloginorsignup1"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/linloginorsignup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <Button
            android:layout_marginTop="50px"
            android:id="@+id/btn_loginorsignup_login"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:background="@drawable/main_logo_login"
                />

        <Button
            android:id="@+id/btn_loginorsignup_signup"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:text="@string/signup"
            android:background="@drawable/main_logo_signup"
            android:layout_marginTop="10px"
            />
        <Button
            android:id="@+id/btn_loginorsignup_forget"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:text="@string/forget_password"
            android:background="@drawable/main_logo_signup"
            android:layout_marginTop="10px"
            />
        <Button
            android:id="@+id/btn_loginorsignup_guest"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:text="@string/guest"
            android:background="@drawable/main_logo_signup"
            android:layout_marginTop="10px"
            />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/linlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5px">
        <TextView
            android:id="@+id/txtTiengViet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:text="@string/Vietnam" />
        <TextView
            android:id="@+id/txtEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/English"
            android:layout_marginRight="20px"/>
        <TextView
            android:id="@+id/txtHotro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support"
            android:textColorHighlight="#000"
            android:hyphenationFrequency="full"

            />

    </LinearLayout>




</RelativeLayout>